{
  "name": "Blog Post Writer",
  "description": "Generate a complete blog post from a topic using AI",
  "nodes": [
    {
      "id": "input-1",
      "type": "user_input",
      "name": "Blog Topic Input",
      "config": {
        "prompt": "Enter the blog post topic",
        "input_key": "topic",
        "type": "text"
      },
      "position": {
        "x": 100,
        "y": 100
      }
    },
    {
      "id": "llm-1",
      "type": "llm_text_generation",
      "name": "Generate Blog Outline",
      "config": {
        "provider": "openai",
        "model": "gpt-4",
        "prompt": "Create a detailed outline for a blog post about: {{input-1.output}}\n\nInclude:\n- Introduction\n- 3-5 main sections\n- Conclusion\n- Key takeaways",
        "temperature": 0.7,
        "max_tokens": 500
      },
      "position": {
        "x": 300,
        "y": 100
      }
    },
    {
      "id": "llm-2",
      "type": "llm_text_generation",
      "name": "Write Full Blog Post",
      "config": {
        "provider": "openai",
        "model": "gpt-4",
        "prompt": "Based on this outline:\n\n{{llm-1.text}}\n\nWrite a complete, engaging blog post about {{input-1.output}}. Make it informative, well-structured, and approximately 800-1000 words.",
        "temperature": 0.8,
        "max_tokens": 2000
      },
      "position": {
        "x": 500,
        "y": 100
      }
    },
    {
      "id": "output-1",
      "type": "output",
      "name": "Blog Post Output",
      "config": {
        "format": "json",
        "fields": [
          "input-1.output",
          "llm-1.text",
          "llm-2.text"
        ]
      },
      "position": {
        "x": 700,
        "y": 100
      }
    }
  ],
  "connections": [
    {
      "from_node": "input-1",
      "to_node": "llm-1"
    },
    {
      "from_node": "input-1",
      "to_node": "llm-2"
    },
    {
      "from_node": "llm-1",
      "to_node": "llm-2"
    },
    {
      "from_node": "llm-2",
      "to_node": "output-1"
    }
  ]
}


